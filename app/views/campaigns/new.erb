<% content_for :title do %>
  Game Master's Companion - New Campaign
<% end %>
<% content_for :nav_dropdown do %>
  <li class="dropdown">
    <a data-target="#" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"  aria-haspopup="true" aria-expanded="false">Campaigns  <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <% current_user.campaigns.each do |campaign| %>
        <li><a href="/campaigns/<%= campaign.slug %>"><%= campaign.name %></a></li>
        <% end %>
        <li role="separator" class="divider"></li>
        <li><a href="/campaigns/new">New Campaign</a></li>
      </ul>
    </li>
<% end %>

<div class="row">

  <div class="col-md-6 col-md-push-6">
    <div class=""><h3>Let’s Get Started</h3>
      <p>With the GM’s Companion, starting your new campaign has never been easier. Fill in the information listed here to generate a new campaign. Once you’ve created a campaign, you’ll have access to character and encounter information right at your fingertips. </p>
    </div>
    <br>
    <img src="/img/floating-island.jpg" class="hidden-sm hidden-xs img-responsive" alt="">
  </div>
  <div class="col-md-6 col-md-pull-6 form-backdrop">
    <h2>Create a new campaign</h2>
    <form class="" action="/campaigns" method="post">
      <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="name" id="campaign_name"      placeholder="Name">
      </div>
      <div class="form-group">
        <label for="Setting">Setting</label>
        <input type="text" class="form-control" name="setting" id="campaign_setting"      placeholder="Setting">
      </div>
      <div class="form-group">
        <label for="Notes">Notes</label>
        <br>
        <textarea name="notes" class="form-control" rows="8" style="min-width: 100%"></textarea>
      </div>
      <div class="row">
        <div class="col-md-4">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <div class="col-md-2 col-md-offset-6">
          <a href="/">Cancel</a>
        </div>
      </div>

    </form>
  </div>
</div>
