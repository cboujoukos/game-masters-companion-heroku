<% content_for :title do %>
  Game Master's Companion - Enemies
<% end %>
<% content_for :nav_dropdown do %>
  <li class="dropdown">
    <a data-target="#" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"  aria-haspopup="true" aria-expanded="false">Campaigns  <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <% current_user.campaigns.each do |campaign| %>
        <li><a href="/campaigns/<%= campaign.slug %>"><%= campaign.name %></a></li>
        <% end %>
        <li role="separator" class="divider"></li>
        <li><a href="/campaigns/new">New Campaign</a></li>
      </ul>
    </li>
<% end %>

<h1>Enemies index page</h1>
<div class="row">
  <div class="col-md-12">
    <% @enemies.sort{|x,y| x.name <=> y.name}.each do |enemy| %>

    <div class="col-md-12 backdrop-red">
      <div class="row">
        <div class="col-md-8">
          <h4><a href="/campaigns/<%= @campaign.slug %>/characters/<%= enemy.id %>"><%= enemy.name %></a></h4>
        </div>
        <div class="col-md-4">
          <% if enemy.cr != "" %>
            <br><p>CR: <%= enemy.cr %></p>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4">
          <p>Armor Class: <%= enemy.ac %></p>
        </div>
        <div class="col-xs-4">
          <p>Hit Points: <%= enemy.hp %></p>
        </div>
        <div class="col-xs-4">
          <p>Passive Perception: <%= enemy.passive_perception %></p>
        </div>
      </div>
      <% if enemy.stats != "" %>
        <div class="row">
          <div class="col-md-12">
            <p>Stats: <%= enemy.stats %></p>
          </div>
        </div>
      <% end %>
      <% if enemy.notes != "" %>
        <div class="row">
          <div class="col-md-12">
            <p>Notes: <%= enemy.notes %></p>
          </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-4 col-md-offset-8">
      <h3> <a href="/campaigns/<%= @campaign.slug %>">Back to Campaign</a> </h3>
    </div>
  </div>
</div>
